{
  "name": "dimmer",
  "title": "dimmer.js",
  "description": "Simple JavaScript dialog with ability to pass dynamic data declaratively",
  "version": "0.0.1",
  "homepage": "https://github.com/lyutkin/dimmer",
  "repository": "lyutkin/dimmer",
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "build:watch": "rollup -c -w -m inline",
    "serve": "browser-sync start --server \"docs\" --server \".\" --files \"docs\" --files \"dist\" --port 3000",
    "dev": "run-p -r serve build:watch"
  },
  "browser": "dist/dimmer.min.js",
  "main": "dist/dimmer.js",
  "module": "dist/dimmer.es.js",
  "files": [
    "dist/"
  ],
  "keywords": [
    "simple",
    "dynamic",
    "dialog"
  ],
  "unpkg": "dist/dimmer.min.js",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.24.6",
    "cross-env": "^5.0.5",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.1",
    "rollup": "^0.63.5",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-uglify": "^4.0.0"
  }
}
